{
  "name": "eunchurn.com",
  "version": "1.5.1",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env INIT_CWD=$PWD next dev",
    "build": "cross-env INIT_CWD=$PWD next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "build:github": "cross-env INIT_CWD=$PWD EXPORT=true BASE_PATH='/eunchurn.com' UNOPTIMIZED=true next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "export": "next export",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "next lint --fix --dir pages --dir app --dir components --dir lib --dir layouts --dir scripts",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "postinstall": "contentlayer2 build"
  },
  "dependencies": {
    "@headlessui/react": "2.2.9",
